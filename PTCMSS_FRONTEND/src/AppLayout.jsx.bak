function ShellLayout() {
    // Redirect unauthenticated users to login
    let hasToken = false;
    try { hasToken = !!localStorage.getItem("access_token"); } catch {}
    if (!hasToken) {
        return <Navigate to="/login" replace />;
    }
    return (
        <div className="flex min-h-screen bg-slate-50 text-slate-900">
            <SidebarNav />

            <div className="flex-1 flex flex-col min-w-0">
                <Topbar />

                <main className="flex-1 overflow-y-auto p-5">
                    {/* Ghi chÃº:
                       Má»™t sá»‘ mÃ n con (vÃ­ dá»¥ dashboard tÃ i xáº¿) hiá»‡n váº«n theme dark.
                       Sau nÃ y mÃ¬nh cÃ³ thá»ƒ refactor sang ná»n sÃ¡ng thá»‘ng nháº¥t.
                    */}
                    <Outlet />
                </main>
            </div>
        </div>
    );
}

